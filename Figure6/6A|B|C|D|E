cluster_7 = data.frame(t(C3_data[,which(C3$seurat_clusters == 7)]))
cluster_8 = data.frame(t(C3_data[,which(C3$seurat_clusters == 8)]))
cluster_9 = data.frame(t(C3_data[,which(C3$seurat_clusters == 9)]))
